<!DOCTYPE html>
<html lang="en">
	<head>
	    <!-- Required meta tags -->
	    <meta charset="utf-8">
	    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<link rel="icon" type="image/png" href="{{ base_url() }}/img/favicon.ico">

	   <!-- Bootstrap CSS -->
	   <link rel="stylesheet" type="text/css" href="{{ base_url() }}/css/bootstrap.min.css">

		<!-- Mis estilos css -->
		<link rel="stylesheet" type="text/css" href="{{ base_url() }}/css/estilosPrint.css">
		<title>{{ titulo }}</title>
		<style type="text/css">
			body {
				font-size: 100%;
			}
			.cellRight {
			  text-align: right;
			}
			p.data {
				font-size: 0.875em;
				/*margin-left: 1px;*/
			}
			table {
				font-size: 0.875em;
			}
		</style>
	</head>
	<body>
		<header>
			<div class="container-fluid">
				<div class="row justify-content-end">
					<div class="col-xs-3">
						<button id="btnImprimir" type="button" class="btn btn-primary">Imprimir</button>
						<button id="btnVolver" type="button" class="btn btn-light mr-1">Volver</button>
					</div>
				</div>
				<div class="row">
					<div class="col">
						<hr>
					</div>
				</div>
			</div>
		</header>

		<div class="container-fluid">
			<div class="row">
				<div class="col">
					<h3 class="text-center"><strong>Informe saldos a fecha</strong></h3>
					<p class="data text-center font-weight-bold mb-0">Saldos al:&nbsp; {{ fechaInfo|date("d/m/Y") }}</p>
				</div>
			</div> {# end row #}

			<div class="row">
				<div class="col">
					<hr>
				</div>
			</div>

			<div class="row">
				<div class="col-5 offset-6 pr-4">
					<p class="text-right data">Fecha emisión:&nbsp; {{ fechaAct }}</p>
				</div>
				<div class="col-1"></div>
			</div>

			<div class="row mt-0">
				<div class="col-10 offset-1">
					<table class="table table-sm">
					  	<thead class="thead-dark">
					    	<tr>
						    	<th class="cellRight" scope="col">Id</th>
						      	<th scope="col">Cliente</th>
						      	<th scope="col">Domicilio</th>
						      	<th scope="col">Localidad</th>
						      	<th scope="col">Teléfono</th>
						      	<th scope="col">Celular</th>
						      	<th scope="col" class="cellRight">Saldo</th>
						      	<th scope="col"></th>
					    	</tr>
					  	</thead>
					  	<tbody>
							{% for list in listado %}
								<tr>
									<td class="cellRight">{{ list.Id }}</td>
									<td>{{ list.Cliente }}</td>
									<td>{{ list.Direccion }}</td>
									<td>{{ list.Localidad }}</td>
									<td>{{ list.Telefono }}</td>
									<td>{{ list.Celular }}</td>	
									<td class="cellRight"> $ {{ list.Saldo|number_format(2, ',', '.') }}</td>
									<td></td>
								</tr>
							{% endfor %}
						    <tr>
						    	<td></td>
						    	<td></td>
						    	<td></td>
						    	<td></td>
						    	<td></td>
						    </tr>
						</tbody>
					</table>
				</div>
			</div>

		</div>  {# end container #}

		<script src="{{ base_url() }}/js/jquery-3.3.1.min.js"></script>
		<script type="text/javascript">
			// Codigo jQuery
			$(document).ready(function(){

				// Para boton volver
				$('#btnVolver').click( function() {
			    	window.close();
			    });

				// Boton Imprimir
				$('#btnImprimir').click( function() {
                    window.print();
				});

			});
		</script>
	</body>
</html>
