{% extends 'base.twig' %}

{% block head %}
	{{ parent() }}

	<link rel="stylesheet" href="{{ base_url() }}/css/jquery-confirm.min.css">
	<link rel="stylesheet" href="{{ base_url() }}/css/typeahead.css">
	<link rel="stylesheet" href="{{ base_url() }}/css/estilosCtasCtes.css">

{% endblock %}	

{% block title %}{{ titulo }}{% endblock %} 

{% block navigation %}
	<nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-primary">

	    <a class="navbar-brand" href="{{ path_for('home') }}">
	      <img src="{{ base_url() }}/img/logo-cesarini.png" width="80" height="40" alt="">
	    </a>

	    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
	      <span class="navbar-toggler-icon"></span>
	    </button>

		<div class="collapse navbar-collapse" id="navbarSupportedContent">
	    	<ul class="navbar-nav mr-auto">
			    <li class="nav-item active">
		        	<a class="nav-link" href="{{ path_for('home') }}">Salir</a>
			    </li>
	    	</ul>
	    </div>
	</nav>	
{% endblock %}

{% block breadcrumbs %}
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<nav aria-label="breadcrumb">
				    <ol class="breadcrumb">
					    <li class="breadcrumb-item"><a href="{{ path_for('home') }}">Menú</a></li>
					    <li class="breadcrumb-item"><a href="{{ path_for('home') }}">Cuentas Corrientes</a></li>
					    <li class="breadcrumb-item active" aria-current="page">Resumen Detallado</li>
				    </ol>
				</nav>
			</div>
		</div>
		{% include 'partes/flash.twig' %}
	</div>
{% endblock %}

{% block content %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-11" id="guiaReparto">
				<h2><strong>Resumen Detallado</strong></h2>

				<div class="bkgFiltroFecha">
            		<div class="row">
                		<div class="col-2">
                    		<p class="pFiltroFecha"><u>Filtro fecha</u>:</p>
                		</div>
						<div class="col-4 d-md-inline-flex">
						    <label class="lblFecha" for="fechaDesde">Desde</label>
						    <input type="date" class="form-control form-control-sm" id="fechaDesde" name="fechaDesde" value="{{ fechaDesde }}">
						</div>
						<div class="col-4 d-md-inline-flex">
						    <label class="lblFecha" for="fechaHasta">Hasta</label>
						    <input type="date" class="form-control form-control-sm" id="fechaHasta" name="fechaHasta" value="{{ fechaHasta }}">
						</div>
					</div>
				</div>

        		<div class="row bkgBuscarCli">
            		<div class="col-2">
                		<p class="pFiltroFecha"><u>Filtro cliente</u>:</p>
            		</div>
             		<div class="col-8 mb-1">
 	    				<label class="sr-only" for="inputBuscarCli">Cliente</label>
	    				<input id="inputBuscarCli" name="inputBuscarCli" class="typeahead form-control form-control-sm" type="text" placeholder="Buscar cliente (3 letras min.)" autofocus autocomplete="off" spellcheck="false" size="380px;">
            		</div>
				</div>

				<div class="row">
					<div class="col-2"></div>
					<div class="col-7 mt-3 mb-2">
						<form class="form-inline">
							<div class="input-group input-group-sm">
								<label for="inputCliPorCod">Buscar por: </label>
								<input class="form-control form-control-sm ml-3 mt-0 cellRight numero" type="text" id="inputCliPorCod" autocomplete="off" spellcheck="false" placeholder="Código cliente...">
							</div>
							<button type="button" class="btn btn-primary btn-sm ml-3" id="btnCliPorCodigo">Buscar</button>
						</form>
					</div>
		            <div class="col-3">
		                    <button type="button" class="btn btn-sm btn-info float-right mt-3" id="btnLimpiar">Limpiar selección</button>
		            </div>
				</div>

				<div class="row">
					<div class="col">
						<hr>
					</div>
				</div>

		        <div class="row">
		            <div class="col-6 offset-3">
		                <a type="button" class="btn btn-success btn-block" id="btnGenList" target="_blank">
		                    <strong>Generar resumen detallado</strong>
		                </a>
		            </div>
		        </div>  {# /.row #}

			</div>	{# /col-11 id="guiaReparto" #}
		</div>	{# /row #}
	</div>    {# /container #}
{% endblock %}

{% block javascript %}
	{{ parent() }}

	<script src="{{ base_url() }}/js/typeahead.bundle.min.js"></script>
	<script src="{{ base_url() }}/js/jquery.tableFilter.js"></script>
	<script src="{{ base_url() }}/js/jquery-confirm.min.js"></script>

    <script type="text/javascript">
    	// Paths
    	var _pathCodcliente = "{{ path_for('repartos.visitaslistado.clieporcod') }}",
    		_pathResumen    = "{{ path_for('ctasctes.verresumendetallado') }}",
    		_pathCliente    = "{{ path_for('repartos.visitas.cliente') }}";
	</script>

	<script src="{{ base_url() }}/js/resumencta.js"></script>

{% endblock %}
