{% extends 'base.twig' %}

	{% block head %}
		{{ parent() }}

		<style type="text/css">
			#loginform {
			    margin: 15% auto 0 auto;
			    color: #7a7a7a;
			    border-radius: 3px;
			    margin-bottom: 15px;
			    font-size: 13px;
			    background: rgba(236, 236, 236, 0.95);
			    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.3);
			    padding: 5px 5px 40px;  
			    position: relative; 
			}

			@media screen and (max-width: 992px) {
				#loginform {
				    margin: 20% auto 0 auto;
				    color: #7a7a7a;
				    border-radius: 3px;
				    margin-bottom: 14px;
				    font-size: 12px;
				    background: rgba(236, 236, 236, 0.95);
				    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.3);
				    padding: 4px 4px 35px;  
				    position: relative; 
				}
			}

			@media screen and (max-width: 768px) {
				#loginform {
				    margin: 25% auto 0 auto;
				    color: #7a7a7a;
				    border-radius: 3px;
				    margin-bottom: 13px;
				    font-size: 11px;
				    background: rgba(236, 236, 236, 0.95);
				    box-shadow: 0px 3px 3px rgba(0, 0, 0, 0.3);
				    padding: 3px 2px 30px;  
				    position: relative; 
				}
			}

			#loginform .avatar {
			    position: absolute;
			    margin: 0 auto;
			    left: 0;
			    right: 0;
			    top: -50px;
			    width: 95px;
			    height: 95px;
			    border-radius: 50%;
			    z-index: 9;
			    background: #70c5c0;
			    padding: 15px;
			    box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.2);
			}

			#loginform .avatar img {
			    width: 100%;
			}

			#loginform h2 {
			    font-size: 28px;
			    color: black;
			    margin: 60px 0 3px;
			}

			#loginform button {
			    margin-top: 20px !important;
			}
		</style>
	{% endblock %} 

	{% block title %}{{ titulo }}{% endblock %} 

	{% block navigation %}

	   {# {% include 'partes/nav_login.twig' %} #}

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        	<a class="navbar-brand" href="#">
          		<img src="{{ base_url() }}/img/logo-cesarini.png" width="80" height="40" alt="">
        	</a>
        	<div class="collapse navbar-collapse" id="navbarSupportedContent">
          		<ul class="navbar-nav mr-auto">
					<li></li>
          		</ul>
        	</div>
        </nav>

	{% endblock %}
 
	{% block content %}

		<div class="container">

			<div class="row justify-content-center justify-content-sm-center justify-content-md-center justify-content-lg-center">
				<div class="col-10 col-sm-8 col-md-8 col-lg-4" id="loginform">
					<div class="avatar">
						<img src="{{ base_url() }}/img/avatar.png" alt="Avatar">
					</div>
					<h2 class="text-center">Acceso</h2>
					<br>
					<form class="formlogin" action="{{ path_for('postlogin') }}" method="post" autocomplete="off" novalidate>
					    <div class="input-group input-group-sm mb-2">
					        <input type="text" class="form-control form-control-sm" id="user" name="user" placeholder="Usuario">
					    </div>
					    <div class="input-group input-group-sm mb-2">
					        <input type="password" class="form-control form-control-sm" id="passw" name="passw" placeholder="Contraseña">
					    </div>
					  	<button type="submit" class="btn btn-primary btn-block">Ingresar</button>

						{# Para CSRF control #}
						{{ csrf.field | raw }}
					</form>
				</div>
			</div>

			<br>
			{% include 'partes/flash.twig' %}
		</div>
	{% endblock %}

	{% block javascript %}
		{{ parent() }}

		<script>
			$(document).ready(function(){
				// Si el div clase mensaje existe...
				if ($("div.mensaje").length > 0) {
					// Hace desaparecer el div con la línea del mensaje
                    $('div.mensaje').delay(5000).fadeOut('slow');
				};
			});
		</script>
	{% endblock %}