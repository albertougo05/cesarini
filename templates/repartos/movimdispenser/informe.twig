                idDisp: "{{ urlParams.idDisp }}",
                idClie: "{{ urlParams.idClie }}",
                estado: "{{ urlParams.estado }}"
        };

    </script>
    <script src="{{ base_url() }}/js/informeMovDispenser.js"></script>
{% endblock %}
