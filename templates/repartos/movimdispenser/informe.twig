        var global_buscarcliente 
        // Objeto con los parametros de opciones y filtros
        var _urlParams = {
                column: "{{ urlParams.column }}",
                 orden: "{{ urlParams.orden }}",
              ordFecha: "{{ urlParams.ordFecha }}",
