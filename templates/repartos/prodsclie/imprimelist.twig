<!DOCTYPE html>
<html lang="en">
	<head>
	    <!-- Required meta tags -->
	    <meta charset="utf-8">
	    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<link rel="icon" type="image/png" href="{{ base_url() }}/img/favicon.ico">

	   <!-- Bootstrap CSS -->
	   <link rel="stylesheet" type="text/css" href="{{ base_url() }}/css/bootstrap.min.css">

		<!-- Mis estilos css -->
		<link rel="stylesheet" type="text/css" href="{{ base_url() }}/css/estilosPrint.css">
		<title>{{ titulo }}</title>
		<style type="text/css">
			.cellRight {
			  text-align: right;
			}
		</style>
	</head>
	<body>
		<header>
			<div class="container-fluid">
				<div class="row justify-content-end">
					<div class="col-xs-3">
						<button id="btnImprimir" type="button" class="btn btn-primary mr-1">Imprimir</button>
						<button id="btnVolver" type="button" class="btn btn-light mr-1">Volver</button>
					</div>
				</div>
				<div class="row">
					<div class="col">
						<hr>
					</div>
				</div>
			</div>
		</header>

		<div class="container-fluid">
			<div class="row">
				<div class="col pr-5 mb-0 mr-5 mt-3">
					<p class="text-right mb-0">Fecha Emisión: {{ fecha }}</p>
				</div>
			</div>

			<div class="row">
				<div class="col mb-3">
					<br>
					<h3 class="text-center" id="titImpGuia"><strong>Productos de cliente en Guía Reparto</strong></h3>
					<br>
				</div>
			</div> {# end row #}

			<div class="row">
				<div class="col-2"></div>
					<div class="col mb-4">
						<h5><strong>{{ guiasRep[0].IdCliente }} - {{ guiasRep[0].ApellidoNombre }}</strong> <small>({{ guiasRep[0].Direccion }})</small></h5>
						<hr>
					</div>
				<div class="col-2"></div>
			</div>

			{% for guia in guiasRep %}

				<div class="row">
					<div class="col-3"></div>
					<div class="col mb-4">

						{# <h6><strong>{{ guia.IdCliente }} - {{ guia.ApellidoNombre }}</strong> <small>({{ guia.Direccion }})</small></h6> #}
						<p style="margin-bottom: 5px;">Guia Reparto: {{ guia.IdReparto }}  -  {{ guia.DiaSemana }}/{{ guia.Turno }}  -  Repartidor: {{ guia.Repartidor }}</p>

						<table class="table table-striped table-sm mt-0">
							<thead class="thead-dark">
								<tr class="small">
									<th></th>
									<th scope="col" class="text-center">Id Producto</th>
							        <th scope="col" style="width: 150px;">Descripción</th>
							        <th scope="col" class="cellRight">Cant. sugerida</th>
							        <th></th>
						    	</tr>
							</thead>
							<tbody>
								{% for prod in guia.productos %}
									<tr class="small">
										<td></td>
										<td class="text-center">{{ prod.IdProducto }}</td>
										<td>{{ prod.Descripcion }}</td>
										<td class="cellRight">{{ prod.CantSugerida }}</td>
										<td></td>
									</tr>
								{% endfor %}
							</tbody>
						</table>

					</div>
					<div class="col-3"></div>
				</div>

            {% endfor %}

		</div>  {# end container #}

		<script src="{{ base_url() }}/js/jquery-3.3.1.min.js"></script>
		<script type="text/javascript">
			// Codigo jQuery
			$(document).ready(function(){

				// Para boton volver
				$('#btnVolver').click( function() {
			    	window.close();
			    });

				// Boton Imprimir
				$('#btnImprimir').click( function() {
                    window.print();
				});
			});
		</script>
	</body>
</html>
