<!DOCTYPE html>
<html lang="en">
	<head>
	    <!-- Required meta tags -->
	    <meta charset="utf-8">
	    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<link rel="icon" type="image/png" href="{{ base_url() }}/img/favicon.ico">

	   <!-- Bootstrap CSS -->
	   <link rel="stylesheet" type="text/css" href="{{ base_url() }}/css/bootstrap.min.css">

		<!-- Mis estilos css -->
		<link rel="stylesheet" type="text/css" href="{{ base_url() }}/css/estilosPrint.css">
		<title>{{ titulo }}</title>
		<style type="text/css">
			body {
				font-size: 100%;
			}
			.cellRight {
			  text-align: right;
			}
			p#razon {
				font-size: 1.1em;
			}
			p.data {
				font-size: 0.875em;
				/*margin-left: 1px;*/
			}
			hr.lin {
				margin: 10px auto;
			}
			table {
				font-size: 0.875em;
			}
			.fecha {
				font-size: 0.875em;
			}
		</style>
	</head>
	<body>
		<header>
			<div class="container-fluid">
				<div class="row justify-content-end">
					<div class="col-xs-3">
						<button id="btnImprimir" type="button" class="btn btn-primary">Imprimir</button>
						<button id="btnVolver" type="button" class="btn btn-light mr-1">Volver</button>
					</div>
				</div>
				<div class="row">
					<div class="col">
						<hr>
					</div>
				</div>
			</div>
		</header>

		<div class="container-fluid">
			<div class="row">
				<div class="col">
					<h3 class="text-center"><strong>Visitas según Guía de Reparto</strong></h3>
				</div>
			</div> {# end row #}

			<div class="row">
				<div class="col">
					<hr>
				</div>
			</div>

			<div class="row">
				<div class="col-6 pl-4">
					<p class="data">Período:&nbsp; {{ periodo }}</p>
				</div>
				<div class="col-6 pr-4">
					<p class="text-right data">Fecha emisión:&nbsp; {{ fecha }}</p>
				</div>
			</div>

			<div class="row mt-0">
				<div class="col-md-10 offset-md-1">
					<table class="table table-sm table-striped">
					  	<thead class="thead-dark">
					    	<tr>
						    	<th scope="col">Fecha</th>
						      	<th scope="col">IdVisita</th>
						      	<th scope="col">Cliente (Id)</th>
						      	<th scope="col">Id-Producto</th>
						      	<th scope="col" class="cellRight">Venta</th>
						      	<th scope="col" class="cellRight">Envas</th>
						      	<th scope="col" class="cellRight">Saldo</th>
						      	<th scope="col" class="cellRight">Entrega</th>
					    	</tr>
					  	</thead>
					  	<tbody>
							{% for list in listado %}
								<tr>
									<td>{{ list.Fecha|date("d/m/Y") }}</td>
									<td>{{ list.IdVisita }}</td>
									<td>{{ list.Cliente }} ({{ list.IdCliente }})</td>
									<td>{{ list.IdProducto }} -&nbsp; {{ list.Descripcion }}</td>
									<td class="cellRight">{{ list.Venta }}</td>
									<td class="cellRight">{{ list.Envases }}</td>
									<td class="cellRight"> $&nbsp; {{ list.Saldo|number_format(2, ',', '.') }}</td>
									<td class="cellRight"> $&nbsp; {{ list.Entrega|number_format(2, ',', '.') }}</td>
								</tr>
							{% endfor %}
						    <tr>
						    	<td></td>
						    	<td></td>
						    	<td></td>
						    	<td></td>
						    	<td></td>
						    	<td></td>
						    </tr>
						</tbody>
					</table>
				</div>
			</div>

		</div>  {# end container #}

		<script type="text/javascript">
			// Código JS
			(function() {
				// Click en boton Volver
			   	const btnVolver = document.getElementById('btnVolver');

			   	btnVolver.addEventListener('click', event => {
			   		window.close();
			   	});

				// Click en boton Imprimir
			   	const btnImprimir = document.getElementById('btnImprimir');

			   	btnImprimir.addEventListener('click', event => {
			   		window.print();
			   	});
			})();
		</script>
	</body>
</html>
