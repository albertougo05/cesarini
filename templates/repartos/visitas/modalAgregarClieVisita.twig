{# Modal agregar cliente a Visitas #}

<!-- Modal -->
<div class="modal fade" id="modalAgregarCliente" tabindex="-1" role="dialog" aria-labelledby="modalAgregarCliente" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
        	<h5 class="modal-title" id="modalAgrClieCenterTitle"><strong>Agregar cliente  a visita</strong></h5>
        	<button id="btnModAgrClie" type="button" class="close" data-dismiss="modal" aria-label="Close">
          		<span aria-hidden="true">&times;</span>
        	</button>
        </div>
        <div class="modal-body">
    		<div class="row">
    			<div class="col-md-10 offset-md-1 divColInputModal">
    				<form id="dataCli">
    					<div class="form-row">
    						<div class="form-group col-md-8 offset-md-1">
	    						<label for="inputModBuscarCli">Cliente</label>
	    						<input id="inputModBuscarCli" name="inputModBuscarCli" class="typeahead form-control form-control-sm" type="text" placeholder="Buscar apellido o fantasía (3 letras mín.)" autofocus autocomplete="off" spellcheck="false" size="380px;">
	    					</div>
							<div class="form-group col-md-2 cellRight">
							    <label for="ordenCli">Orden</label>
							    <input type="text" class="form-control form-control-sm cellRight" id="ordenCli" name="ordenCli">
							</div>
						</div>
    					<input type="hidden" id="idclie" name="idclie">
    					<input type="hidden" id="client" name="client">
    					<input type="hidden" id="iddomi" name="iddomi">
    					<input type="hidden" id="domici" name="domici">
    				</form>

  				</div>
			</div>
			<br />
			<div class="row">
				<div class="col-md-10 offset-md-1">
					<hr>
					<form id="producto">
						<div class="form-row">
						    <div class="form-group col-md-8 offset-md-2">
						        <label for="selProd">Producto</label>
						        <select id="selProd" class="form-control form-control-sm">
						            <option value='0' selected>Seleccione un producto...</option>
						            {% for producto in listaprod %}
										<option value="{{ producto.id }}" data-pre="{{ producto.precio }}">{{ producto.descrip }}</option>
									{% endfor %}
						        </select>
						    </div>
						</div>
					</form>
				</div>    {# /col #}
			</div>    {# /row #}
	    </div>
        <div class="modal-footer">
        	<button type="button" id="btnConfirmAgrCli" class="btn btn-primary btn-sm">Confirma</button>
        	<button id="btnCancelModAgrCli" type="button" class="btn btn-sm btn-outline-secondary" data-dismiss="modal">Cancela</button>
        </div>
      </div>
    </div>
</div>
